{
	"compilerOptions": {
		"rootDir": ".",
		"target": "ES2021",
		"module": "commonjs",
		"outDir": "./build",
		"emitDecoratorMetadata": true,
		"allowJs": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"pretty": true,
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"],
			"@test": ["entrypoint.ts"]
		}
	},

	"exclude": ["node_modules", "build"]
}
